<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/estilo')%>
    
    <title>Nueva Pregunta</title>
</head>

    <%- include('partials/head')%>

    <h1> Nueva Pregunta</h1>

    <div class="container">
        <form class="row g-3" action="/nuevapregunta" method= "post" enctype="multipart/form-data">
            <div class="col-md-6">
            <label for="grupo" class="form-label">Grupo</label>
                <select id="grupo" class="form-select" name="grupo">
                    <% grupos.forEach(function(grupo, index){ %>
                        <option value="<%- grupo.group_id%>"> <%- grupo.group_name%></option>

                    <% })%>
                </select>
            </div>

            <div class="col-md-6">
                <label for="nivel" class="form-label">Nivel</label>
                <select id="nivel" class="form-select" name="nivel">
                    <% levels.forEach(function(level, index){ %>
                    <option  value="<%- level.level_id%>"><%- level.level_desc%></option>
                    <% })%>
                </select>
            </div>

            <div class="col-md-12">
                <label for="pregunta" class="form-label">Pregunta:</label>
                <input type="text" class="form-control" id="Pregunta" name="pregunta">
            </div>

            <div class="col-md-6">
                <label for="file_imagen" class="form-label">imagen:</label>
                <input type="file" class="form-control" id="file_imagen" name="file_imagen">
            </div>



            <div class="col-12">
            <button type="submit" class="btn btn-primary">Aceptar</button>
            </div>
        </form>

    </div>

<%- include('partials/footer')%>
</html>